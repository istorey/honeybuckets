<div class="whole-body">
<div class="right-body">
<div id="map" class="review-map"></div>
<div class="nearby">
<h3>Nearby locations</h3>
<ul class="reviews">
<% for location in @location.nearbys(10) %>
  <li><%= link_to location.address, location %> (<%= location.distance.round(2) %> miles)</li>
<% end %>
</ul>
</div>

</div>



<div class="left-body">
<h2 class="reviews"><%= @location.address %></h2>
<h2 class="reviews">Average Rating</h2>
<%= @rating.round(2) %>



<% if @user.name == "guest" %>
<h1 class="reviews"><%= @user.name %></h1>

<ul class="reviews-guest">
 <% @reviews.each do |review| %>
 	<li><%= review.body %></li>
 	<li class="review-rating"><%= review.rating %></li>
 <%end%>
</ul>


<h2 class="reviews">Average Rating</h2>
<%= @rating.round(2) %>

<% else %>

<!-- <h1 class="reviews"><%= @user.name %></h1> -->

<% if flash[:notice] %>
<div class="notice">
<%= flash[:notice] %>

</div>
<% end %>
<div  id="review-input">
<%= form_for [@location, @review] do |r| %>
  <%= r.label :review %><br>
  <%= r.text_field :body, :class => "text_field" %><br>
  <span class="rating">
  <%= r.radio_button :rating, 1, {class: "rating"}  %>
  <%= r.radio_button :rating, 2, {class: "rating"}  %>
  <%= r.radio_button :rating, 3, {class: "rating"}  %>
  <%= r.radio_button :rating, 4, {class: "rating"}  %>
  <%= r.radio_button :rating, 5, {class: "rating"}  %>
  </span>
  <br>
  <%= r.submit %>
<% end %>
</div>

<div class="comment-box" style="width:400px;height:400px;overflow:auto;padding:5px;">
<ul class="reviews-signed-in">
  <h2 class="reviews">Reviews:</h2>
 <% @reviews.each do |review| %>
  <div class="wrap">
   <li><%= review.body %></li>
   <li>Rating: <%= review.rating %></li>
 </div>
 <%end%>
</ul>
</div>

<% end %>

<script type="text/javascript">
  var page = "show";
  initialize();
</script>
</div>
</div>
